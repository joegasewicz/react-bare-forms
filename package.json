{
  "name": "react-bare-forms",
  "version": "0.0.33",
  "description": "A bare minimal React form library for quick & simple forms.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "scripts": {
    "build:dev": "webpack --env.mode devlopment --entry=./src/index.ts --output-path=dist --output-filename=index.js",
    "build:prod": "webpack --env.mode production --entry=./src/index.ts --declaration --output-path=lib --output-filename=index.js",
    "watch:prod": "webpack --watch --env.mode production --entry=./src/index.ts --output-path=lib --output-filename=index.js",
    "start": "webpack-dev-server --watch --config webpack.config.dev.js --output-path=dist --output-filename=bundle.js",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "typedoc": "typedoc --mode modules --ignoreCompilerErrors --stripInternal --out docs src && touch docs/.nojekyll && cp -r images docs/images",
    "release": "npm run build:prod && npm publish",
    "upgrade": "yarn upgrade --latest"
  },
  "jest": {
    "setupFiles": [
      "./tests/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)?$"
  },
  "keywords": [
    "react",
    "typescript",
    "forms",
    "react-forms",
    "javascript"
  ],
  "author": "joegasewicz",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@types/react-test-renderer": "^17.0.1",
    "codecov": "^3.8.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "html-webpack-plugin": "^5.3.0",
    "jest": "^26.6.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "source-map-loader": "^2.0.1",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.17",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.30",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "files": [
    "lib"
  ]
}
